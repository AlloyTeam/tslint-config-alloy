{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "resolveJsonModule": true,
        "jsx": "React",
        // "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": ["test/index.ts", "scripts/build.ts", "site/**/*.ts", "site/**/*.tsx"]
}
